    "@prisma/client": "^6.4.1",
    "babel-jest": "^29.7.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.41.8",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.6.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "supertest": "^7.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
